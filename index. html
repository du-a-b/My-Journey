<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>Scroll Reveal Car Showcase</title>
<style>
  body {
    margin: 0;
    background: #111;
    color: white;
    font-family: sans-serif;
    height: 300vh; /* to allow scrolling */
  }

  .section {
    position: relative;
    height: 100vh;
    overflow: hidden;
  }

  .car-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.2);
    transition: transform 1s ease-out;
  }

  .sheet {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, #222, #000);
    transform-origin: top;
    transition: transform 1s ease-out;
  }

  .reveal .car-image {
    transform: scale(1);
  }

  .reveal .sheet {
    transform: translateY(-100%);
  }

  .title {
    position: absolute;
    z-index: 2;
    top: 20px;
    left: 20px;
    font-size: 2rem;
  }
</style>
</head>
<body>

<div class="section" id="carSection">
  <div class="title">Car in Motion</div>
  <img src="https://images.unsplash.com/photo-1502877338535-766e1452684a" alt="Car" class="car-image">
  <div class="sheet"></div>
</div>

<script>
  const section = document.getElementById('carSection');
  window.addEventListener('scroll', () => {
    const rect = section.getBoundingClientRect();
    const windowHeight = window.innerHeight;
    const revealPoint = windowHeight * 0.75; // trigger when 75% into view
    if (rect.top < revealPoint) {
      section.classList.add('reveal');
    } else {
      section.classList.remove('reveal');
    }
  });
</script>

</body>
</html>